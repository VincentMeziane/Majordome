{% extends '/layouts/base.html.twig' %}

{% block title 'Majordome' %}

{% block body %}
<h1 class="text-center col-12">{{ pluralize(cards|length, 'Carte') }} trouv√©es</h1>

{% for card in cards %}
		
	<div class="card m-2 col-12 col-sm-5 col-lg-3" style="height: 350px;">
		{% if card.image is defined %}
		<img class="card-img-top" src="{{card.image}}" alt="Card image cap">
		{% endif %}
		<div class="card-body d-flex flex-column justify-content-start">
		  <h5 class="card-title"><a href="{{ path('app_card_show', {id: card.id}) }}">{{card.title}}</a></h5>
		  <p class="card-text">{{card.description|u.truncate(10, '...', false)}}</p>
		  <p class="mt-auto"><i><small>{{ card.createdAt|ago }}</small></i></p>
		</div>
	</div>
{% endfor %}
{% endblock %}