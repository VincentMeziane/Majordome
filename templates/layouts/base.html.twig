<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link href="https://fonts.googleapis.com/css2?family=Neuton&display=swap" rel="stylesheet">
		{% block stylesheets %}
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
			<style>
			html, body{
				font-family: 'Neuton', serif;
			}
				.alert {
					padding: 10px;
					color: white;
					text-align: center;
					margin: 0;
					border: none;
					border-radius: 0;
				}
				.alert-success {
					background-color: green;
				}
				.alert-error {
					background-color: rgb(241, 82, 82);
				}
				.alert-info {
					background-color: rgb(204, 204, 117);
				}
			</style>

		{% endblock %}
	</head>

	<body class="d-flex flex-column justify-content-between">
		{{include('layouts/partials/_top-navbar.html.twig')}}
		<div role="main" class="container d-flex flex-wrap align-items-start justify-content-around">
			{{include('layouts/partials/_flash-message.html.twig')}}
			{% block body %}{% endblock %}
		</div><!-- fermeture : container -->
		{{include('layouts/partials/_footer.html.twig')}}
		{% block javascripts %}
			<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
		{% endblock %}
	</body>
</html></body></html>
