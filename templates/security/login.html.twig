{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="loginForm light1 row col-12">
<form method="post" class="col-8 m-auto" novalidate=true>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

        <h1 class="h3 mb-3 font-weight-normal text-center">Formulaire d'inscription</h1>
        <label for="email">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
        <label for="password">Mot de passe</label>
        <input type="password" name="password" id="password" class="form-control" required>
    
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
    
{#         
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
     #}
            <div class="checkbox m-3 text-right">
                
                <input type="checkbox" name="_remember_me" id="_remember_me" class="m-2" hidden>
                <label for="_remember_me" class="d-flex align-items-center rememberMeLabel"><div id="rememberMeSpan" class="mr-2"></div>Se souvenir de moi</label>
            </div>
       

    <div class="btngroup col-12 m-0 p-0 row justify-content-center">
        <button class="btn btn-lg btn-pale col-2 mt-3" type="submit">
            Sign in
        </button>
    </div>
</form>
    </div>
{% endblock %}
