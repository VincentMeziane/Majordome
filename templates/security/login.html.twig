{% extends 'layouts/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="loginForm light1 row col-12">
<form method="post" class="col-8 m-auto" novalidate=true>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Formulaire de connexion</h1>
    <label for="email">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
    <label for="password">Mot de passe</label>
    <input type="password" name="password" id="password" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="checkbox m-3 text-right">
        <input type="checkbox" name="_remember_me" id="_remember_me" class="m-2" hidden>
        <label for="_remember_me" class="d-flex align-items-center rememberMeLabel form-check-label"><div id="rememberMeSpan" class="mr-2"></div>Se souvenir de moi</label>
    </div>

       

    <div class="btngroup col-12 m-0 p-0 row justify-content-center">
        <button class="btn btn-lg btn-pale mt-3" type="submit">
            Connexion
        </button>
    </div>
    <div class="row col-3">
        <small class="light2">Pas encore inscrit ?</small>
        <a class="btn btn-pale pt-1 pb-1"href="{{path('app_register')}}">S'inscrire</a>
    </div>
</form>
    </div>
{% endblock %}
